{
  "name": "editor-test",
  "version": "0.0.1",
  "description": "Editor Testing Suite",
  "author": "PlayCanvas",
  "license": "Properietary",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test-ci": "playwright test --reporter list",
    "test-debug": "playwright test --debug ",
    "test-ui": "playwright test --ui",
    "test-headed": "playwright test --headed",
    "docker": "docker compose up --build",
    "report": "playwright show-report",
    "codegen": "playwright codegen --load-storage .auth/state.json",
    "auth": "tsx src/auth.ts",
    "home": "tsx src/home.ts",
    "lint": "eslint . --ext .ts,.mjs",
    "typecheck": "tsc --declaration --emitDeclarationOnly"
  },
  "devDependencies": {
    "@playcanvas/editor-api": "^1.1.24",
    "@playcanvas/eslint-config": "^2.0.9",
    "@playcanvas/observer": "^1.6.6",
    "@playwright/test": "^1.53.2",
    "@types/node": "^22.5.0",
    "@typescript-eslint/parser": "^8.28.0",
    "bottleneck": "^2.19.5",
    "dotenv": "^16.4.5",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "node-fetch": "^3.3.2",
    "tsx": "^4.19.3"
  }
}
